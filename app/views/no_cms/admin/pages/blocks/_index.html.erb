<div class="row has-children content_blocks_placeholder">
  <div class="tool-bar-blocks">
    <a href="#" class="btn-square ico-collapse-v js-collapse-all-blocks" title="Collapse all blocks"></a>
    <label><%= t('.title') %></label>
    <a class="btn _m0" href="#" id="new_content_block">Add new container</a>
  </div>


  <%= f.fields_for :blocks, f.object.blocks.reject(&:parent).sort_by(&:position) do |f_block| %>

    <div class="block row <%= block_form_classes(f_block.object).join(" ")%>" id="<%= block_form_id(f_block.object) %>">
      <%= render 'no_cms/admin/pages/blocks/form', f: f_block %>
    </div>
  <% end %>
</div>
